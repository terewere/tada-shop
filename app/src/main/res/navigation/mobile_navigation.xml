<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_splash">

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.kasa.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_nav_splash_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_nav_splash_to_welcome"
            app:destination="@id/nav_welcome"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_home"
        android:name="com.kasa.home.HomeFragment"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.kasa.category.CategoryFragment"
        android:label="@string/menu_categories"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/nav_feed"
        android:label="@string/menu_feed"
        android:name="com.kasa.feed.FeedFragment"
        tools:layout="@layout/fragment_feed">
    </fragment>

    <fragment
        android:id="@+id/nav_wallet"
        android:label="@string/menu_wallet"
        android:name="com.kasa.wallet.WalletFragment"
        tools:layout="@layout/fragment_wallet">
    </fragment>
    <fragment
        android:id="@+id/nav_orders"
        android:label="@string/menu_orders"
        android:name="com.kasa.account.OrdersFragment"
        tools:layout="@layout/fragment_orders">
    </fragment>

    <fragment
        android:id="@+id/nav_products"
        android:name="com.kasa.products.ProductFragment"
        tools:layout="@layout/fragment_product" />


    <fragment
        android:id="@+id/nav_product_detail"
        android:name="com.kasa.products.ProductDetailFragment"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/nav_cart"
        android:label="@string/menu"
        android:name="com.kasa.cart.CartFragment"
        tools:layout="@layout/fragment_cart" />

<!--    //AUTHENTICATION-->
    <fragment
        android:id="@+id/nav_welcome"
        android:label="welcome"
        android:name="com.kasa.auth.WelcomeFragment"
        tools:layout="@layout/fragment_registration_welcome" >

        <action
            android:id="@+id/action_welcome_to_register"
            app:destination="@id/nav_register"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_login"
        android:name="com.kasa.auth.LoginFragment"
        android:label="verify phone"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/nav_register"
            />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true"
            />

    </fragment>


    <fragment
        android:id="@+id/nav_register"
        android:name="com.kasa.auth.RegisterFragment"
        android:label="register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_nav_register_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true"
            />

        <action
            android:id="@+id/action_nav_register_to_login"
            app:destination="@id/nav_login"

            />
    </fragment>


</navigation>