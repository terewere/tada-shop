<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.kasa.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_nav_splash_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_home"
        android:name="com.kasa.category.CategoryFragment"
        tools:layout="@layout/fragment_category">

    </fragment>


    <fragment
        android:id="@+id/nav_categories"
        android:name="com.kasa.category.CategoryFragment"
        android:label="@string/menu_categories"
        tools:layout="@layout/fragment_category" />


    <fragment
        android:id="@+id/nav_products"
        android:name="com.kasa.products.ProductFragment"
        tools:layout="@layout/fragment_product" />


    <fragment
        android:id="@+id/nav_product_detail"
        android:name="com.kasa.products.ProductDetailFragment"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/nav_cart"
        android:label="@string/menu"
        android:name="com.kasa.products.CartFragment"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/nav_pickCountry"
        android:name="com.kasa.auth.CountryPickerFragment"
        android:label="Select Country"
        tools:layout="@layout/fragment_registration_country_picker" />

<!--    //AUTHENTICATION-->
    <fragment
        android:id="@+id/nav_welcome"
        android:label="welcome"
        android:name="com.kasa.auth.WelcomeFragment"
        tools:layout="@layout/fragment_registration_welcome" >

        <action
            android:id="@+id/action_nav_welcome_to_nav_verify_phone"
            app:destination="@id/nav_verify_phone" />
    </fragment>

    <fragment
        android:id="@+id/nav_verify_phone"
        android:name="com.kasa.auth.VerifyPhoneFragment"
        android:label="verify phone"
        tools:layout="@layout/verify_phone_fragment">
        <action
            android:id="@+id/action_nav_verify_phone_to_nav_verify_token"
            app:destination="@id/nav_verify_token" />
    </fragment>

    <fragment
        android:id="@+id/nav_verify_token"
        android:name="com.kasa.auth.VerifyTokenFragment"
        android:label="verify token"
        tools:layout="@layout/verify_token_fragment">

        <action
            android:id="@+id/action_nav_verify_token_to_nav_register"
            app:destination="@id/nav_register"
            app:popUpTo="@id/nav_verify_phone" />
    </fragment>

    <fragment
        android:id="@+id/nav_register"
        android:name="com.kasa.auth.UpdateProfileFragment"
        android:label="register"
        tools:layout="@layout/fragment_update_profile">
        <action
            android:id="@+id/action_nav_register_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home" />
    </fragment>


</navigation>